<Window x:Class="CourseProjectDataBaseCars.DBLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProjectDataBaseCars"
        mc:Ignorable="d"
        Title="DBLoginWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Text="{Binding UserName}" FontSize="16" Margin="30"/>
        <TextBox Grid.Row="1" Text="{Binding Password}" FontSize="16" Margin="30"/>

        <Button Command="{Binding LoginCommand}" Grid.Row="2" Content="Войти" FontSize="20"/>
    </Grid>
</Window>
