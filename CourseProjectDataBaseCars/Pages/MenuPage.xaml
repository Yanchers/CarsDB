<local:BasePage x:TypeArguments="local:MenuPageViewModel"
    x:Class="CourseProjectDataBaseCars.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseProjectDataBaseCars"
      mc:Ignorable="d"
      Height="370" Width="600"
      Title="MenuPage">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="БД Автодилер" FontSize="47" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Command="{Binding CatalogPageCommand}" Grid.Row="1" Content="Каталог" FontSize="40" Width="300" Height="70"/>
        <Button Grid.Row="2" Content="Другое" FontSize="40" Width="300" Height="70"/>
    </Grid>
</local:BasePage>
