        <TreeView Grid.Row="3" ItemsSource="{Binding BankItems}" FontSize="26">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Credits}">
                    <Border Padding="5">
                        <Grid Width="760">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}"/>
                            <Button Command="{Binding AddCreditCommand}" Grid.Column="3" Content="+" VerticalAlignment="Center" Margin="0 0 10 0"/>
                        </Grid>
                    </Border>

                    <HierarchicalDataTemplate.ItemTemplate>
