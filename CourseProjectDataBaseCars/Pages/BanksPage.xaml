<local:BasePage x:TypeArguments="local:BanksPageViewModel"
    x:Class="CourseProjectDataBaseCars.BanksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseProjectDataBaseCars"
      mc:Ignorable="d"
      Height="490" Width="600"
      Title="Банки" x:Name="banksPage">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Доступные банки" FontSize="50" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Command="{Binding CreateBankCommand}" FontSize="26" Content="Создать банк" Margin="30 0"/>
            <Button Command="{Binding DeleteBankCommand}" Grid.Column="1" FontSize="26" Content="Удалить банк" Margin="30 0"/>
        </Grid>

        <ListBox Grid.Row="2" ItemsSource="{Binding BankItems}" SelectedIndex="{Binding SelectedBankIndex}">
            <ListBox.Template>
                <ControlTemplate>
                    <DockPanel LastChildFill="True">
                        <Grid DockPanel.Dock="Top" TextBlock.FontSize="22" x:Name="bankListDockPanel">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.4*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="ID Банка"/>
                            <TextBlock Grid.Column="1" Text="Название банка"/>
                        </Grid>
                        
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                            <ItemsPresenter x:Name="BankItemsPresenter"></ItemsPresenter>
                        </ScrollViewer>
                    </DockPanel>
                </ControlTemplate>
            </ListBox.Template>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="{Binding ElementName=BankItemsPresenter, Path=ActualWidth}" TextBlock.FontSize="25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="{Binding Id}"/>
                        <TextBlock Grid.Column="1" Text="{Binding Name}"/>

                        <Expander Grid.Row="1" Grid.ColumnSpan="2" Header="Показать кредиты">
                            <ListBox ItemsSource="{Binding Credits}" Width="{Binding ElementName=BankItemsPresenter, Path=ActualWidth}">
                                <ListBox.Template>
                                    <ControlTemplate>
                                        <DockPanel LastChildFill="True">
                                            <Grid DockPanel.Dock="Top" Width="{Binding ElementName=BankItemsPresenter, Path=ActualWidth}" TextBlock.FontSize="16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.6*"/>
                                                    <ColumnDefinition Width="0.6*"/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="ID Кредита"/>
                                                <TextBlock Grid.Column="1" Text="Ставка (%)"/>
                                                <TextBlock Grid.Column="2" Text="Срок истечения (дни)"/>
                                                <Button Command="{Binding Path=DataContext.AddCreditCommand, ElementName=banksPage}" 
                                                        CommandParameter="{Binding DataContext.Id, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                    Grid.Column="3" Content="Добавить" VerticalAlignment="Center" HorizontalAlignment="Center" Width="80"/>
                                            </Grid>
                                            <ItemsPresenter></ItemsPresenter>
                                        </DockPanel>
                                    </ControlTemplate>
                                </ListBox.Template>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid TextBlock.FontSize="18" Width="{Binding ElementName=BankItemsPresenter, Path=ActualWidth}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.6*"/>
                                                <ColumnDefinition Width="0.6*"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Id}"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Rate}"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Expiration}"/>
                                            <Button Command="{Binding Path=DataContext.DeleteCreditCommand, ElementName=banksPage}" CommandParameter="{Binding Id}"
                                                Grid.Column="3" Content="-" VerticalAlignment="Center" HorizontalAlignment="Center" Width="40" Margin="0 0 10 0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Expander>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
