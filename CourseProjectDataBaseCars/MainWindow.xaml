<Window x:Class="CourseProjectDataBaseCars.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProjectDataBaseCars"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu FontSize="14">
            <MenuItem Command="{Binding CatalogPageCommand}" Header="Главная"/>
            <MenuItem Header="Изменить">
                <MenuItem Command="{Binding BanksPageCommand}" Header="Банки \ Кредиты"/>
                <MenuItem Command="{Binding FactoriesPageCommand}" Header="Заводы"/>
                <MenuItem Command="{Binding DevPageCommand}" Header="Dev"/>
            </MenuItem>
            <MenuItem Header="Справка"/>
        </Menu>
        
        <Frame Grid.Row="1" Content="{Binding CurrentPage, Source={x:Static local:ApplicationViewModel.Instance}, Converter={local:PageConverter}}" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
