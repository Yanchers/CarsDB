<Window x:Class="CourseProjectDataBaseCars.AddBankWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProjectDataBaseCars"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Создать" Height="140" Width="420"
        x:Name="addBankWindow">
    <Window.DataContext>
        <local:AddBankWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <TextBlock Text="Название" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20 0 0 0"/>
            <TextBox Text="{Binding Bank.Name}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Right" Width="140" Margin="0 0 20 0"/>
        </Grid>
        <Button Command="{Binding CreateBankCommand}" CommandParameter="{Binding ElementName=addBankWindow}" Grid.Column="1" Content="Создать" FontSize="25" VerticalAlignment="Center" 
                Margin="10 0" Padding="5 5"/>
    </Grid>
</Window>
