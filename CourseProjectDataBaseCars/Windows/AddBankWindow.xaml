<Window x:Class="CourseProjectDataBaseCars.AddBankWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProjectDataBaseCars"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="Создать" Height="110" Width="420"
        x:Name="addBankWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Название" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBox Grid.Row="1" Text="{Binding Bank.Name}" FontSize="20" VerticalAlignment="Center" Margin="30 0"/>
        </Grid>
        <Button Command="{Binding CreateBankCommand}" CommandParameter="{Binding ElementName=addBankWindow}" 
                Grid.Column="1" Content="Подтвердить" FontSize="25" VerticalAlignment="Center" Margin="10 0" Padding="5 5"/>
    </Grid>
</Window>
